pipeline {
    agent any 
    stages {
        stage('mount dummyapp image') { 
            steps { 
                sh 'ls -la'
                sh 'rm cicd/docker/src/dummyapp -Rf'
                sh 'cd cicd/docker/src && sudo chmod 777 init-repos.sh && ./init-repos.sh && ls -la'
                
            }
        }
        stage('do unitests over docker image'){
            steps {
                sh 'ls -la'
            }
        }      
        stage('send slack message over docker image') {
            steps {
                sh 'ls -la'
            }
        }
        stage('deploy to dev') {
            steps {
                sh 'ls -la'
            }
        }
    }
}
