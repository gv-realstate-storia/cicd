pipeline {
    agent any 
    stages {
        stage('mount dummyapp image') { 
            steps { 
                sh 'ls -la'
                sh 'rm cicd/docker/src/dummyapp -Rf'
                sh 'cd cicd/docker/src && sudo chmod 777 init-repos.sh && ./init-repos.sh && ls -la'
                sh 'if [ $(docker ps -a -q | wc -l) -eq 0 ]; then echo "No containers running!"; else docker stop $(docker ps -a -q) && docker rm $(docker ps -a -q) ; fi'
                sh 'cd cicd/docker && docker-compose up'
            }
        }
        stage('do unitests'){
            steps {
                sh 'ls -la'
            }
        }      
        stage('send slack report message') {
            steps {
                sh 'ls -la'
            }
        }
    }
}
